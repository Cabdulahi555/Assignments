};


int main()
{
  letter ar[SIZE];
  initializeArray(ar);
  cout << ar[0].freq << endl;
  cout <<"." << ar[0].longest << ":" << endl;
  cout << "." << ar[0].shortest << ":" << endl;
 
  return 0;

}

