#include <iostream>
using namespace std;

// Function prototype
void myStrcpy(char dest[], const char source[]);

int main()
{
    char str1[50] = "Hello CS111";  // increased size for safety
    cout << str1 << endl;           // Hello CS111

    myStrcpy(str1, "Oh PHYS302");
    cout << str1 << endl;           // Oh PHYS302

    myStrcpy(str1, "What a great world");
    cout << str1 << endl;           // What a great world

    return 0;
}

// Custom implementation of strcpy
void myStrcpy(char dest[], const char source[])
{

  //Hint: I have only 4 lines of code inside this function
  int i = 0;

  while (source[i] != '\0')
    {

      dest[i] = source[i];
      i++

    }

  dest [i] = '\0'; //Don’t forget to place ‘\0’ at the end.


}
