This program will ask for a month and tell how many days the month has.
***********************************************************************************/
#include <iostream>
using namespace std;

int main()
{
  // declare variables
  int month, year;

  //input from user
  cout << "Enter the month:" << endl;
  cin >> month;

  // do the processes
  switch(month)
    {
      //months with 31 days
    case 1:
    case 3:
    case 5:
    case 7:
    case 8:
    case 10:
    case 12: cout << "There are 31 days." <<endl;
      break;
    
      //months with 30 days
    case 4:
    case 6:
    case 9:
    case 11: cout << "There are 30 days."<<endl;
	break;
   
      //Ask for year
    case 2: cout << "Enter the year: " << endl;
      cin >> year;
      
      (year % 400 == 0 || year % 4 == 0 && year % 100 ==0)? cout << "There are 28 days." : cout << "There are 29 days."<<endl; 
	break;
      //default response when none of the answers are correct
    default: cout << "Invalid Month.";
    }

  return 0;
}
