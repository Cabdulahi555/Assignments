
/****************************************************
This function will calculate b^e and return the answer.

b is the base
e is the exponent
*******************************************************/
int  pow(int b, int e)
{
  int ans = 1;

  for (int i = 1; i <=e; i++)
    ans *= b;
  
  return ans;
  
}

/****************************************************
This function will calculate absolute3 value.

n is a decimal number, either negative or positive.
*******************************************************/

double fabs(double n)
{
  if (n<0)
  n  *= -1;


  return n;
}

/****************************************************
This function will round the numbers.

n is a decimal number.
*******************************************************/

int round( double n)
{
  int ans;
  ans = (int)(n + 0.5);
    return ans;



}

// this functin will see if a number is a prime number

bool isPrime( int num)
{

  for (int n = 2; n <= num/2; num++)
    {

      if(num % n == 0)
	return false;
      
    }
  return true;

}
