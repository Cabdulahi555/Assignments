#include <iostream>
#include <cstdlib>
#include <iomanip>
using namespace std;
int main()
{
srand(time(0)); //ensures random() generates a different sequence of random numbers in each
 const int SIDES = 6;
 const int NUM_ROLLS = 100;
 int n;
 double prob;
 
//declare an array that will contain counters.
 int ar[SIDES + 1];
 
 //initialize the array here
 for (int i = 1; i <= SIDES; i++)
   ar[i] = SIDES;
   
   //Requirement: You need to use SIDES.

   //roll a die NUM_ROLLS times and keep track of how many times each number was rolled
   for (int i =0; i <= NUM_ROLLS; i++)
     {
     n = rand() % 6 + 1;
     ar[n]++;
     }
//Requirement: You must use the increment operator. Donâ€™t use if else-ifs or switch.
//Show the contents of the array (the number of times each number was rolled) along with the
   for(int i = 1; i < 7; i++){
     prob = (double) ar[i] / NUM_ROLLS * 100;
//probability of rolling each number. Don't show the content in index 0.

     cout << i << ":" << "   " << ar[i] << "    " << fixed << setprecision(4) << prob << "%" << endl;}
       return 0;
   
}
