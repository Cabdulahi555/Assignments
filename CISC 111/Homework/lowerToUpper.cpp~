This program will ask for a lowercase letter and output an uppercase letter.
******************************************************************************/
#include <iostream>
using namespace std;

int main()
{ char lowercase; // declare lowercase
  cout <<"Enter a lowercase letter: "; //grab lowercase from user
    cin >> lowercase; // assign letter
    int offset = 'a' - 'A'; // Get offset by subtracting lowercase from its uppercase
      char uppercase =(char)( lowercase - offset); // we use acsii by subtracting a lowercase from its uppercase

      
      // Now to output the uppercase letter
      cout <<"The uppercase is " << uppercase <<". "<< endl << endl;

      return 0;
}
