  cout <<num;

   cout <<"Guess a number between 1 and 100. Enter your guess: ";
  
  do
{
  cin >> input;

  if (input > num)
    {
      cout << setw(8)<< right <<"Too high, try again.\nEnter your guess: ";
    }
  else if (input < num)
    {
      cout <<"Too low, try again. \nEnter your guess: ";
    }
