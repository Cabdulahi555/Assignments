#include<iostream>
using namespace std;

int main()
{

  char *P;
  char *Q;
  char *T;
  P = new char;
  *P = 'A';

  Q = new char;
  *Q = 'B';


  cout <<"Before swapping P is: " << *P << "." << endl;
  cout <<"Before swapping Q is: " << *Q << "." << endl;

  T = new char;

  
  *T = *P;
  *P = *Q;
  *Q = *T;

  cout <<"After swapping P is: " << *P << "." << endl;
  cout <<"After swapping Q is: " << *Q << "." << endl;

  delete T;
  T = NULL;
  
  delete P;
  P = Q;
 


  
  cout <<"After Changing pointer P is: " << *P << "." << endl;
  cout <<"After changing pointer  Q is: " << *Q << "." << endl;

  
  delete Q;



  return 0;
}// end of main
