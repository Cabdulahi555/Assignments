#include<iostream>
#include<string>
using namespace std;

// gets data from the user to fill S until -1 is entered
// returns: the number of scores; size is the array size
int getData(int S[], int size)
{
   int sc, i;  // local variables for a score and a slot
   for (i = 0; i < size ; i++)
    {
      cout << "Enter a score or -1: ";
      cin >> sc;
      if (sc > -1) S[i] = sc; else break;
    }
  return i; // how many scores were read
}// end of getData

// displays all scores
void displayAll(int S[], int howmany)
{  for (int i = 0; i < howmany ; i++)
    {
      cout << S[i] << endl;;
    }
}// end of displayAll

// searches through S looking for perfect
// returns: how many were perfect
int search(int S[], int howmany, int perfect)
{
  int c = 0; // local variable for counting
  for (int i = 0 ; i < howmany ; i++)
    {
      if (S[i] == perfect) c++;
    }
  return c; // how many were perfect
}// end of search

// finds the total of all scores
// returns: the total
int total(int S[], int howmany)
{
  int sum = 0; // the sum of all scores
  for (int i = 0 ; i < howmany ; i++)
    {
      sum = sum + S[i];
    }
  return sum;
}// end of total


// The tester-client to test each function thoroughly
int main()
{
  int scores[5]; // scores array can hold up to 5
  int numscrs = 0; // how many scores were read
  int choice;  // user menu choice
  int perfect; // for perfect score
    do
    {
      cout <<" ================ " << endl;
      cout << "1. get data" << endl;
      cout << "2. display data" << endl;
      cout << "3. search for perfect" << endl;
      cout << "4. total" << endl;
      cout << "0 to quit" << endl;
      cout <<">> "; 
      cin >> choice;
      switch (choice)
	{
	case 1:
	  
	  {
	  numscrs = getData(scores, 5);
	 
	  }
	  break;
	  
	case 2:

	  {
	    displayAll(scores, numscrs);
	  }
	  break;


	case 3:
	  {
	    
	  cout <<"What is the perfect score?";
	  cin >> perfect;
	  cout << "Found " <<  search(scores, numscrs, perfect) << " perfect score" << endl;
	  }
	  break;
	  
	case 4:

	  {
	    cout << "Total is = " << total(scores, numscrs) << endl;
	  
	  }
	  break;
	  
	case 0:

	  {
	    cout <<"goodbye"<<endl;
	   
	  }
	  break;

	default:

	  {
	    cout <<"bad choice" << endl;
	  }
	  
	}while (choice != 0);
    // ** write switch for different cases to test each of the 4 functions
           //  and display the returned results each time
           //  in an easy to understand way.
     // ** a bad menu choice generates an error message
	
    }//** while choice is not to quit

} // end of main
