#include "grocery.h"

grocery::grocery()
{
  // The 4 lqueue objects are automatically initialized
}
grocery::~grocery()
{
 
 
}
// PURPOSE: Check if a specific line is empty
bool grocery::isEmpty(int lineNumber)
{
  return G[lineNumber].isEmpty();
}

// PURPOSE: Add a customer to the shortest line
// PARAMETERS: newElem – the customer name to add
//             lineNumber – which line to add to (1-4)
void grocery::addRear(string newElem, int lineNumber)
{
 int  index = lineNumber - 1;
  if (lineNumber > 0 && lineNumber < 5)
    {

      G[index].addRear(newElem);
      cout <<"\n==> " <<  newElem << " has been added to line " << (lineNumber + 1) << endl<< endl;
    }
  else throw InvalidLine();
   
}

// PURPOSE: Serve front customer and give back the name
// PARAMETERS: lineNumber – which line to serve from
void grocery::deleteFront(int lineNumber)
{
  lineNumber--;
  
  if (G[lineNumber].isEmpty()) // Check if empty
  {
    throw Underflow();
  }
  else // Line has customers
  {
    string oldElem;
    G[lineNumber].deleteFront(oldElem);
    cout <<"=>'" << oldElem << "'" << " has been served from line " << (lineNumber + 1) << endl<< endl;;
    
  }
   displayAll();
}

// PURPOSE: Display all 4 grocery lines horizontally
void grocery::displayAll()
{
 for (int i = 0; i < 4; i++)
  {
    cout << "Line " << (i + 1) << ": "; 
    G[i].displayAll();             
  }
}

// PURPOSE: Display a specific grocery line horizontally
// PARAMETERS: lineNumber - which line to display (1-4 for user)
void grocery::displayLine(int lineNumber)
{
  lineNumber--; 
  
  if (lineNumber < 0 || lineNumber > 3)
  {
    throw InvalidLine();
  }
  
  cout << "Line " << (lineNumber + 1) << ": ";
  G[lineNumber].displayAll();                 
}
