// ** include all appropriate files
#include <iostream>
using namespace std;

// ** declare el_t for the element type to be int for now
typedef int el_t;

// ** declare struct Node here
struct Node
{
  el_t Elem;     // holds the element
  Node *Next;    // pointer to the next node
};

class lqueue
{
 private: // data members from the client
  Node *Front;
  Node *Rear;

 public: // available to the client

  class Underflow{};   // exception class

  // PURPOSE: constructor to initialize Front and Rear (for an empty case)
  lqueue();

  // PURPOSE: destructor to destroy the queue object and release heap space
  // ** Don't forget that the destructor must destroy the object by calling deleteFront until the list is empty.
  ~lqueue();
  
  // PURPOSE: checks if the queue is empty
  // HOW TO CALL: if (L.isEmpty()) ...
  bool isEmpty();

  // PURPOSE: adds a new element to the rear of the queue
  // PARAMETERS: newElem to be added
  void addRear(el_t newElem);

  // PURPOSE: deletes the front element and gives it back via pass-by-reference
  // PARAMETERS: oldElem is the deleted element
  void deleteFront(el_t& oldElem);

  // PURPOSE: displays all elements of the queue horizontally
  // ** special case: if the queue is empty, display [ empty ]
  void displayAll();
};
#endif
